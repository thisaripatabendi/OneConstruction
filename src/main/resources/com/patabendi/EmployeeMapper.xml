<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<mapper namespace="com.patabendi.EmployeeMapper">
	
	<resultMap id="employeeResult" type="employee">
		<id property="emp_id" column="emp_id" />
		<result property="emp_name" column="emp_name"/>
		<result property="emp_salary" column="emp_salary"/>
		<result property="project_id" column="project_id"/>
		<result property="emp_email" column="emp_email"/>
	</resultMap>

	<insert id="insertEmployee" parameterType="employee">
		INSERT into employee(emp_id,emp_name,emp_salary,project_id,emp_email) VALUES(#{emp_id}, #{emp_name}, #{emp_salary}, #{project_id}, #{emp_email}) 	    
	</insert>

	<select id="selectAllEmployees" resultMap="employeeResult">
	    SELECT * FROM employee
	</select>
	
	<select id="selectEmployeeById" parameterType="string" resultMap="employeeResult">
      	SELECT * FROM employee WHERE emp_id = #{emp_id};
   	</select>
   	
   	<update id="updateEmployee" parameterType="employee">
		UPDATE employee SET emp_name=#{emp_name}, emp_salary=#{emp_salary}, project_id=#{project_id}, emp_email=#{emp_email} WHERE emp_id=#{emp_id}  	    
	</update>
	
	<delete id="deleteEmployeeById" parameterType="string">
		DELETE FROM employee WHERE emp_id =#{emp_id}  	    
	</delete>
	
	<select id="selectAllEmployeesByProject" resultMap="employeeResult">
	    SELECT * FROM employee WHERE project_id = #{project_id};
	</select>
	
	<select id="getSalary" resultMap="employeeResult">
	    SELECT SUM(employee.emp_salary) as emp_salary, project_id FROM employee 
			WHERE employee.project_id in (
				SELECT DISTINCT project.project_id FROM project 
				INNER JOIN employee ON project.project_id = employee.project_id) 
		group by project_id;
	</select>

</mapper>